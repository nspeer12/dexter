<Window x:Class="Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashboard"
        mc:Ignorable="d"
        WindowStyle="None" WindowState="Normal" WindowStartupLocation="CenterOwner" AllowsTransparency="True" Height="450" Width="800" >
    <Window.Background>
        <SolidColorBrush Opacity=".3" Color="Gray"/>
    </Window.Background>
    <Grid>
        <DockPanel Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBox Name="ConsoleTxt" Height="145" TextWrapping="Wrap" DockPanel.Dock="Top" IsReadOnly="True"/>
            <TextBox x:Name="InputTxt" Padding="5" DockPanel.Dock="Bottom" KeyUp="InputTxt_KeyPressed"/>
        </DockPanel>

    </Grid>
</Window>
